                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-1"/>

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"

                    android:textSize="20sp"
                    app:srcCompat="@drawable/ic_credit" />

                <TextView
                    android:id="@+id/titanium_chosen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="420"
                    android:textSize="20sp" />

            </FrameLayout>

            <Button
                android:id="@+id/titanium_plus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="1"/>

            <Button
                android:id="@+id/titanium_plus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_heat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/heat_minus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-5"/>

            <Button
                android:id="@+id/heat_minus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-1"/>

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"

                    android:textSize="20sp"
                    app:srcCompat="@drawable/ic_credit" />

                <TextView
                    android:id="@+id/heat_chosen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="420"
                    android:textSize="20sp" />

            </FrameLayout>

            <Button
                android:id="@+id/heat_plus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="1"/>

            <Button
                android:id="@+id/heat_plus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_plant_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/plant_minus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-5"/>

            <Button
                android:id="@+id/plant_minus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-1"/>

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"

                    android:textSize="20sp"
                    app:srcCompat="@drawable/ic_credit" />

                <TextView
                    android:id="@+id/plant_chosen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="420"
                    android:textSize="20sp" />

            </FrameLayout>

            <Button
                android:id="@+id/plant_plus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="1"/>

            <Button
                android:id="@+id/plant_plus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_floater_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/floater_minus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-5"/>

            <Button
                android:id="@+id/floater_minus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="-1"/>

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"

                    android:textSize="20sp"
                    app:srcCompat="@drawable/ic_credit" />

                <TextView
                    android:id="@+id/floater_chosen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="420"
                    android:textSize="20sp" />

            </FrameLayout>

            <Button
                android:id="@+id/floater_plus1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="1"/>

            <Button
                android:id="@+id/floater_plus5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/resource_decline_button"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:text="cancel"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="match_parent">
            </FrameLayout>

            <Button
                android:id="@+id/resource_confirm_button"

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:text="pay"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>