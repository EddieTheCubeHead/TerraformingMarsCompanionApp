    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal"

        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"

        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:text="Temperature"
                android:textSize="12sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/button_temperature_minus"

                    android:layout_width="20dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_remove_custom" />

                <TextView
                    android:id="@+id/textview_temperature"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:gravity="center"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"

                    android:text="9"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/button_temperature_plus"

                    android:layout_width="20dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_add_custom" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"

            android:layout_marginLeft="5dp"
            >

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:text="Terraforming rating"
                android:textSize="12sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/button_tfr_minus"

                    android:layout_width="20dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_remove_custom" />

                <TextView
                    android:id="@+id/textview_tfr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"

                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="420"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/button_tfr_plus"

                    android:layout_width="20dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_add_custom" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"

            android:layout_marginLeft="5dp"
            >

            <TextView
