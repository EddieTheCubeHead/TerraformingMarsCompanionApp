<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:background="@color/colorBackground"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/colorWindow">
    <ImageView
        android:id="@+id/credits_alt"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">
        <ImageView
            android:id="@+id/credits"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />
        <ImageView
            android:id="@+id/requirement_view"
            android:layout_width="@dimen/requirement_width"
            android:layout_height="30dp"
            android:padding="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/credits"
            android:layout_toRightOf="@+id/credits"
            android:layout_below="@id/card_name"/>
        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Asteroid mining consortium"
            android:textSize="15dp"
            android:textColor="@color/colorWindowText"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/credits"
            android:layout_toRightOf="@+id/credits"/>
        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorWindowText"
            android:text="#1337"
            android:layout_below="@id/card_name"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/requirement_view"

            />
        <ImageView
            android:id="@+id/tag_3"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:padding="2dp"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/tag_2"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:padding="2dp"
            android:layout_toLeftOf="@id/tag_3" />
        <ImageView
            android:id="@+id/tag_1"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:padding="2dp"
            android:layout_toLeftOf="@id/tag_2" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>