<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.NoActionBar"
    app:cardCornerRadius="@dimen/round_corner_radius"
    android:background="@color/colorBackground"
    app:cardUseCompatPadding="true"
    android:fadingEdge="vertical"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/colorWindow">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/card_credit_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="0dp"
            android:src="@drawable/ic_credit"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <TextView
            android:id="@+id/card_credit_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="42"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorWindowText" />

        <ImageView
            android:id="@+id/requirement"
            android:layout_width="@dimen/requirement_width"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/card_credit_imageview"
            android:layout_toRightOf="@+id/card_credit_imageview"
            android:layout_below="@id/card_name"/>
        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asteroid mining consortium"
            android:textSize="15sp"
            android:textColor="@color/colorWindowText"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/card_credit_imageview"
            android:layout_toRightOf="@+id/card_credit_imageview"/>

        <ImageView
            android:id="@+id/tag1"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/tag2"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:layout_toLeftOf="@id/tag1" />

        <ImageView
            android:id="@+id/tag3"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:layout_toLeftOf="@id/tag2" />

        <ImageView
            android:id="@+id/tag4"
            android:layout_width="@dimen/tag_icon_xy"
            android:layout_height="@dimen/tag_icon_xy"
            android:layout_toLeftOf="@id/tag3" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>