<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    
    <ImageButton
        android:id="@+id/button_minus5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/button_minus1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_minus5"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/button_minus5"
        android:layout_toRightOf="@+id/button_minus5" />

    <TextView
        android:id="@+id/money_placed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="42"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button_minus1"
        android:layout_toLeftOf="@id/button_plus1"
        android:layout_toRightOf="@id/button_minus1"

        />

    <ImageButton
        android:id="@+id/button_plus1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_minus5"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@id/button_plus5"
        android:layout_toLeftOf="@id/button_plus5" />

    <ImageButton
        android:id="@+id/button_plus5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button_minus5"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>