<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/resource_changer_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_array_height"
    android:maxWidth="200dp"
    android:minWidth="200dp">

    <ImageButton
        android:id="@+id/button_minus5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/button_minus1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin">
        
        <ImageView
            android:id="@+id/array_resource_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_ph"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/credit_text_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="69"
            android:textSize="20sp"
            android:textStyle="bold" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/button_plus1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/button_margin"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/button_plus5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/button_margin"
        android:layout_weight="1" />

</LinearLayout>
